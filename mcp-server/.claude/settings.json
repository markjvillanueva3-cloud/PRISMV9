      "Read(C:\\PRISM\\**)",
      "Write(C:\\PRISM\\mcp-server\\src\\**)",
      "Write(C:\\PRISM\\mcp-server\\data\\**)",
      "Write(C:\\PRISM\\mcp-server\\scripts\\**)",
      "Write(C:\\PRISM\\state\\**)"
    ],
    "deny": [
      "Write(C:\\PRISM\\mcp-server\\src\\data\\goldenBenchmarks.json)"
    ]
  }
}
