{
  "mcpServers": {
    "prism": {
      "command": "node",
      "args": ["C:\\PRISM\\mcp-server\\dist\\index.js"],
      "env": {
        "ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}",
        "CADENCE_VERBOSITY": "critical",
        "NODE_ENV": "production"
      }
    }
  },
  "permissions": {
    "allow": [
      "Bash(npm run build)",
      "Bash(npm run build:fast)", 
      "Bash(powershell*verify-build*)",
