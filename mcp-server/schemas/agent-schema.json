{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "prism-agent-schema-v1",
  "title": "PRISM Agent Schema",
  "description": "AI agent definition for multi-agent orchestration",
  "type": "object",
  "required": ["id", "name", "tier", "role", "system_prompt"],
  "properties": {
    "id": { "type": "string", "pattern": "^AGENT-[A-Z]+-[0-9]{3}$" },
    "name": { "type": "string" },
    "tier": { "type": "string", "enum": ["OPUS", "SONNET", "HAIKU"] },
    "role": { "type": "string", "description": "Primary function" },
    "description": { "type": "string" },
    "expertise": { "type": "array", "items": { "type": "string" } },
    "system_prompt": { "type": "string", "minLength": 50 },
    "skills_used": { "type": "array", "items": { "type": "string" } },
    "formulas_used": { "type": "array", "items": { "type": "string" } },
    "hooks_triggered": { "type": "array", "items": { "type": "string" } },
    "capabilities": {
      "type": "object",
      "additionalProperties": { "type": "number", "minimum": 0, "maximum": 1 }
    },
    "input_format": {
      "type": "object",
      "properties": {
        "required": { "type": "array", "items": { "type": "string" } },
        "optional": { "type": "array", "items": { "type": "string" } }
      }
    },
    "output_format": {
      "type": "object",
      "properties": {
        "type": { "type": "string", "enum": ["json", "markdown", "code", "text"] },
        "schema": { "type": "string" }
      }
    },
    "cost": { "type": "number", "description": "Relative cost weight" },
    "max_tokens": { "type": "integer" },
    "temperature": { "type": "number", "minimum": 0, "maximum": 1 },
    "status": { "type": "string", "enum": ["ACTIVE", "DEPRECATED", "NEW", "TESTING"] },
    "dependencies": { "type": "array", "items": { "type": "string" } },
    "conflicts_with": { "type": "array", "items": { "type": "string" } },
    "synergies": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "agent": { "type": "string" },
          "synergy_score": { "type": "number" }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created": { "type": "string", "format": "date-time" },
        "updated": { "type": "string", "format": "date-time" },
        "version": { "type": "string" }
      }
    }
  }
}
