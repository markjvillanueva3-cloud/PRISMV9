{
  "name": "prism-mcp-server",
  "version": "1.0.0",
  "description": "PRISM Manufacturing Intelligence MCP Server - CNC machining data, calculations, and AI orchestration",
  "main": "dist/index.js",
  "scripts": {
    "patch": "node scripts/close_gaps.js && node scripts/add_atcs_renames.js",
    "extract": "node scripts/extract_ahw.js",
    "build": "npx esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --format=cjs --external:@modelcontextprotocol/sdk",
    "build:tsc": "npx tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint src --ext .ts",
    "test": "vitest",
    "inspector": "npx @modelcontextprotocol/inspector"
  },
  "keywords": [
    "mcp",
    "manufacturing",
    "cnc",
    "machining",
    "prism",
    "cad",
    "cam"
  ],
  "author": "PRISM Manufacturing Intelligence",
  "license": "PROPRIETARY",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@swc/cli": "^0.7.10",
    "@swc/core": "^1.15.11",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "esbuild": "^0.27.2",
    "eslint": "^8.55.0",
    "tsx": "^4.6.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
