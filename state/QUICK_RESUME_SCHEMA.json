{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PRISM Quick Resume Schema",
  "description": "Schema for instant session resume with minimal context loading",
  "version": "1.0.0",
  
  "definitions": {
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    
    "contextLevel": {
      "type": "string",
      "enum": ["MINIMAL", "STANDARD", "FULL", "DEEP"],
      "description": "How much context to load"
    },
    
    "resumeScenario": {
      "type": "string", 
      "enum": [
        "CONTINUATION",
        "RESUME_FRESH",
        "RESUME_COMPACTED",
        "RESUME_INTERRUPTED",
        "NEW_START"
      ]
    },
    
    "skillReference": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "path": { "type": "string" },
        "priority": { "type": "integer", "minimum": 1, "maximum": 10 },
        "loadTime": { "type": "string", "enum": ["IMMEDIATE", "DEFERRED", "ON_DEMAND"] }
      }
    }
  },
  
  "type": "object",
  "required": ["meta", "quickResume", "context", "actions"],
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "schema": { "const": "prism-quick-resume-v1" },
        "generated": { "$ref": "#/definitions/timestamp" },
        "scenario": { "$ref": "#/definitions/resumeScenario" },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
      }
    },
    
    "quickResume": {
      "type": "object",
      "required": ["oneLiner", "doing", "stopped", "next"],
      "properties": {
        "oneLiner": {
          "type": "string",
          "maxLength": 200,
          "description": "Single line summary for instant context"
        },
        "doing": {
          "type": "string",
          "maxLength": 500,
          "description": "What was being worked on"
        },
        "stopped": {
          "type": "string",
          "maxLength": 200,
          "description": "Why/where work stopped"
        },
        "next": {
          "type": "string",
          "maxLength": 500,
          "description": "Exact next action to take"
        },
        "blockers": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Any blocking issues"
        }
      }
    },
    
    "context": {
      "type": "object",
      "properties": {
        "level": { "$ref": "#/definitions/contextLevel" },
        "roadmap": {
          "type": "object",
          "properties": {
            "currentTier": { "type": "integer" },
            "currentSession": { "type": "string" },
            "sessionName": { "type": "string" },
            "sessionStatus": { "type": "string" },
            "deliverablesPending": { "type": "array", "items": { "type": "string" } }
          }
        },
        "state": {
          "type": "object",
          "properties": {
            "version": { "type": "string" },
            "lastEventSequence": { "type": "integer" },
            "lastCheckpointId": { "type": "string" }
          }
        },
        "skills": {
          "type": "object",
          "properties": {
            "required": { "type": "array", "items": { "$ref": "#/definitions/skillReference" } },
            "recommended": { "type": "array", "items": { "$ref": "#/definitions/skillReference" } },
            "preloaded": { "type": "array", "items": { "type": "string" } }
          }
        },
        "files": {
          "type": "object",
          "properties": {
            "mustRead": { "type": "array", "items": { "type": "string" } },
            "recentlyModified": { "type": "array", "items": { "type": "string" } },
            "workInProgress": { "type": "array", "items": { "type": "string" } }
          }
        }
      }
    },
    
    "actions": {
      "type": "object",
      "properties": {
        "immediate": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "order": { "type": "integer" },
              "action": { "type": "string" },
              "tool": { "type": "string" },
              "params": { "type": "object" }
            }
          },
          "description": "Actions to execute immediately on resume"
        },
        "deferred": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Actions that can wait"
        }
      }
    },
    
    "lkg": {
      "type": "object",
      "description": "Last Known Good state for recovery",
      "properties": {
        "timestamp": { "$ref": "#/definitions/timestamp" },
        "checkpointId": { "type": "string" },
        "stateChecksum": { "type": "string" },
        "validated": { "type": "boolean" }
      }
    }
  }
}
