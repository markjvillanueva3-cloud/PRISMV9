{
  "_meta": {
    "database": "ReportTemplateDB",
    "version": "1.0.0",
    "description": "Report type definitions and rendering specifications for manufacturing reports",
    "source_engine": "ReportRenderer.ts",
    "extracted": "2026-02-26",
    "milestone": "L0-P0-MS2"
  },
  "report_types": [
    {
      "type": "setup_sheet",
      "name": "Machine Setup Sheet",
      "description": "Machine setup sheet with tool list and operation tables for shop floor use",
      "required_fields": ["part_name", "material", "tools", "operations"],
      "optional_fields": ["part_number", "machine", "date", "operator", "iso_group", "work_offset", "fixture", "safety_notes", "total_cycle_time_min", "notes"],
      "sections": ["Job Information", "Tool List", "Operations", "Safety Notes"],
      "tool_fields": ["sequence", "type", "diameter_mm", "flutes", "coating", "holder", "stickout_mm"],
      "operation_fields": {
        "sequence": "number",
        "feature": "string",
        "phases": [{ "type": "string", "cutting_speed": "number", "feed_per_tooth": "number", "axial_depth": "number", "radial_depth": "number", "spindle_speed": "number", "feed_rate": "number" }],
        "coolant": { "strategy": "string", "pressure_bar": "optional number" },
        "cycle_time_min": "optional number"
      }
    },
    {
      "type": "process_plan",
      "name": "Manufacturing Process Plan",
      "description": "Manufacturing process plan with step sequence for production planning",
      "required_fields": ["part_name", "material", "steps"],
      "optional_fields": ["part_number", "revision", "created_by", "approved_by", "total_time_min"],
      "sections": ["Header", "Process Steps", "Summary"]
    },
    {
      "type": "cost_estimate",
      "name": "Cost Breakdown",
      "description": "Cost breakdown with per-part and batch totals for quoting and budgeting",
      "required_fields": ["part_name", "material", "batch_size"],
      "optional_fields": ["material_cost", "tool_cost", "machine_rate", "labor_rate", "setup_time_min", "cycle_time_min", "overhead_pct"],
      "sections": ["Job Details", "Cost Breakdown", "Per-Part Summary", "Batch Total"]
    },
    {
      "type": "tool_list",
      "name": "Tool BOM",
      "description": "Tool bill-of-materials formatted for shop floor tool preparation",
      "required_fields": ["part_name", "tools"],
      "optional_fields": ["machine", "date"],
      "sections": ["Header", "Tool Table", "Notes"]
    },
    {
      "type": "inspection_plan",
      "name": "Quality Inspection Plan",
      "description": "Quality inspection plan with critical feature highlighting and measurement methods",
      "required_fields": ["part_name", "features"],
      "optional_fields": ["part_number", "material", "tolerance_class", "measurement_equipment"],
      "sections": ["Header", "Critical Features", "Dimensional Checks", "Surface Finish Requirements", "Notes"]
    },
    {
      "type": "alarm_report",
      "name": "Alarm Diagnosis Report",
      "description": "Alarm diagnosis with severity badge and remediation steps for troubleshooting",
      "required_fields": ["alarm_code", "machine"],
      "optional_fields": ["controller", "description", "severity", "timestamp"],
      "sections": ["Alarm Information", "Diagnosis", "Remediation Steps", "Prevention"]
    },
    {
      "type": "speed_feed_card",
      "name": "Speed/Feed Reference Card",
      "description": "Compact speed/feed reference card for operator quick-reference at the machine",
      "required_fields": ["material", "operations"],
      "optional_fields": ["tool_type", "coating", "machine"],
      "sections": ["Material Info", "Speed/Feed Table", "Notes"]
    }
  ],
  "rendering": {
    "format": "markdown",
    "footer": "Generated by PRISM ReportRenderer v1.0",
    "table_style": "pipe-delimited markdown tables",
    "number_format": { "decimals": 2, "cost_prefix": "$", "na_value": "N/A" }
  }
}
